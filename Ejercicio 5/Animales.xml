<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="Animales.xsd" type="application/xml" schematypens="http://www.w3.org/2001/XMLSchema"?>
<animales>
    <habitat nombre="Selva">
        <animal tipo="mamífero" en_peligro="si">
            <nombre>Jaguar</nombre>
            <nombre_cientifico>Panthera onca</nombre_cientifico>
            <alimentacion>Carnívoro</alimentacion>
            <tamanio>Grande</tamanio>
            <esperanza_vida>12</esperanza_vida>
            <poblacion>2000</poblacion>
        </animal>
        <animal tipo="reptil" en_peligro="no">
            <nombre>Boa constrictora</nombre>
            <nombre_cientifico>Boa constrictor</nombre_cientifico>
            <alimentacion>Carnívoro</alimentacion>
            <tamanio>Mediano</tamanio>
            <esperanza_vida>20</esperanza_vida>
            <poblacion>15000</poblacion>
        </animal>
    </habitat>
    <habitat nombre="Desierto">
        <animal tipo="mamífero" en_peligro="no">
            <nombre>Zorro del desierto</nombre>
            <nombre_cientifico>Vulpes zerda</nombre_cientifico>
            <alimentacion>Omnívoro</alimentacion>
            <tamanio>Pequeño</tamanio>
            <esperanza_vida>10</esperanza_vida>
            <poblacion>8000</poblacion>
        </animal>
        <animal tipo="ave" en_peligro="si">
            <nombre>Águila calva</nombre>
            <nombre_cientifico>Haliaeetus leucocephalus</nombre_cientifico>
            <alimentacion>Carnívoro</alimentacion>
            <tamanio>Mediano</tamanio>
            <esperanza_vida>30</esperanza_vida>
            <poblacion>3000</poblacion>
        </animal>
    </habitat>
</animales>

<!-- Restricciones sugeridas para el esquema XSD:
1. El atributo "en_peligro" debe ser "si" o "no".
2. La esperanza de vida debe ser un número entre 1 y 100.
3. La población debe ser un número entero mayor que 0.
4. Los animales deben tener un nombre y un nombre científico sin números.
5. El tamaño de los animales debe ser "Pequeño", "Mediano" o "Grande".
-->

